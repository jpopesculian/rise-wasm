{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "baseUrl": ".",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "alwaysStrict": true,
    "inlineSources": true,
    "lib": ["dom", "es7", "es2015", "esnext.bigint"],
    "outDir": "pkg"
  },
  "include": [
    "imports/**/*"
  ],
  "exclude": ["node_modules"]
}
